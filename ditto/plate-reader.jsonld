{
    "@context": [
      "https://www.w3.org/2022/wot/td/v1.1",
      {
        "om2": "http://www.ontology-of-units-of-measure.org/resource/om-2/",
        "schema": "http://schema.org/"
      }
    ],
    "@type": "tm:ThingModel",
    "title": "Plate Reader",
    "description": "An automated license plate reader (ALPR) device",
    "version": {
      "model": "1.0.0"
    },
    "properties": {
      "deviceID": {
        "title": "Device ID",
        "type": "string",
        "readOnly": true
      },
      "location": {
        "title": "Location",
        "type": "geo:point",
        "description": "GPS coordinates of the mounted location (latitude, longitude)"
      },
      "fieldOfView": {
        "title": "Field of View",
        "type": "object",
        "properties": {
          "horizontalAngle": {
            "title": "Horizontal Angle",
            "type": "number",
            "unit": "om2:Degree"
          },
          "verticalAngle": {
            "title": "Vertical Angle",
            "type": "number",
            "unit": "om2:Degree"
          }
        }
      },
      "cameraResolution": {
        "title": "Camera Resolution",
        "type": "number",
        "unit": "schema:Megapixel"
      },
      "imageCaptureRate": {
        "title": "Image Capture Rate",
        "type": "number",
        "unit": "schema:FramePerSecond"
      },
      "lastServiced": {
        "title": "Last Serviced",
        "type": "string",
        "format": "date-time"
      }
    },
    "events": {
      "plateRecognized": {
        "title": "Plate Recognized",
        "description": "Event triggered when the device recognizes a license plate.",
        "properties": {
          "timestamp": {
            "title": "Timestamp",
            "type": "string",
            "format": "date-time",
            "description": "Datetime when the plate was recognized."
          },
          "image": { 
            "title": "Image",
            "type": "string",
            "description": "Base64 encoded image data (optional)."
          }
        }
      }
    },
    "metrics": {
      "uptime": {
        "title": "Uptime",
        "type": "number",
        "unit": "schema.org:Percent"
      }
    }
  }
  